{
  "name": "dungeon-crawler",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "yarn run eslint --ignore-path .gitignore app",
    "lint:fix": "yarn run eslint --ignore-path .gitignore --fix app"
  },
  "devDependencies": {
    "@types/three": "^0.131.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "typescript": "^4.3.2",
    "vite": "^2.5.4"
  },
  "dependencies": {
    "three": "^0.132.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn run lint:fix",
      "git add"
    ]
  }
}
